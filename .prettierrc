{
  "useTabs": false,
  "tabWidth": 4,
  "singleQuote": true,
  "trailingComma": "none",
  "printWidth": 100,
  "plugins": ["prettier-plugin-tailwindcss", "prettier-plugin-svelte"],
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte",
        "plugins": ["prettier-plugin-tailwindcss", "prettier-plugin-svelte"]
      }
    },
    {
      "files": "*.svx",
      "options": {
        "parser": "mdx",
        "plugins": ["prettier-plugin-tailwindcss", "prettier-plugin-svelte"],
        "tabWidth": 2
      }
    },
    {
      "files": "*.md",
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": "*.{json,yaml,yml,prettierrc}",
      "options": {
        "tabWidth": 2,
        "printWidth": 200
      }
    }
  ]
}
